@{
    ViewBag.Title = "Home Page";
}
<div class="row mt-1 mb-1 ">
    <div class="col">
        <div class="float-lg-end">
            @Html.ActionLink("Tạo", "CreateSV", "Home", null, new { @class = "btn btn-primary" })
        </div>
    </div>
</div>
<main>
    @using Kendo.Mvc;
    @using Kendo.Mvc.UI;
    @using Kendo.Mvc.UI.Fluent;
    @using KendoTest.Models;
    @{
        var thuctap = Model;
        ViewBag.Title = "Home Page";
        string action = "LoadListSv";
        string controllerName = "Home";
    }



    @(Html.Kendo().Grid<TBLSinhVien>()
    .Name("grid")
    .Columns(columns =>
    {
        columns.Bound(sv => sv.Hotensv).Title("Họ tên sv");
        columns.Bound(sv => sv.Namsinh).Title("Năm sinh");
        columns.Bound(sv => sv.Quequan).Title("Quê quán");
        columns.Bound(sv => sv.Makhoa).Title("Mã khoa");
        columns.Bound(sv => sv.Masv)
       .Title("Actions")
       .ClientTemplate("<a class='btn btn-primary' href='" + Url.Action("EditSv", "Home") + "?maSv=#=Masv#'" + ">Edit</a> | <a class='btn btn-primary' href='" + Url.Action("DeleteSv", "Home") + "?maSv=#=Masv#'" + ">Delete</a>");

    })
    .DataSource(dataSource => dataSource
        .Ajax()
        .PageSize(10)
        .Read(read => read.Action(action, controllerName)))
    .Pageable()
    .Scrollable(scroll => scroll.Height("auto"))
    .Sortable().Selectable()
    )
</main>